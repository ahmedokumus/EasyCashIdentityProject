@model ConfirmMailViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container text-center mt-3">
    <div class="row">
        <div class="column">
            <h2>Taşınan Mail Adresi @ViewBag.v</h2>
            <br/>
            <form method="post">
                <label class="mb-3">Kullanıcı Mail Adresi</label>
                <input type="text" class="form-control mb-2" asp-for="Mail" value="@ViewBag.v" />
                <br/>
                <label class="mb-3">Mail Adresine Gelen Kod</label>
                <input type="text" class="form-control mb-2" asp-for="ConfirmCode"/>

                <button class="btn btn-primary">Hesabı aktifleştir</button>
            </form>
        </div>
    </div>
</div>
